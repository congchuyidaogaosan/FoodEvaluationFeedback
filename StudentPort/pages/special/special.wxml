<view class="container">
  <view class="special-list">
    <block wx:for="{{specialDishes}}" wx:key="id">
      <view class="special-item" bindtap="navigateToDishDetail" data-id="{{item.id}}">
        <image class="dish-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
        <view class="dish-info">
          <text class="dish-name">{{item.name}}</text>
          <view class="price-info">
            <text class="original-price">原价: ¥{{item.originalPrice}}</text>
            <text class="special-price">特价: ¥{{item.specialPrice}}</text>
          </view>
          <view class="time-info">
            <text>特价时间: {{item.startTime}} - {{item.endTime}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>

  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <view wx:if="{{!loading && specialDishes.length === 0}}" class="empty">
    <text>暂无特价菜品</text>
  </view>

  <view wx:if="{{!loading && !hasMore && specialDishes.length > 0}}" class="no-more">
    <text>没有更多了</text>
  </view>
</view> 