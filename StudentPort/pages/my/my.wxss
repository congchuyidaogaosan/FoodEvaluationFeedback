.container {
  /* min-height: 100vh; */
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  width: 100%;
}

/* 用户信息卡片样式 */
.user-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.user-info-row {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.avatar-btn {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  line-height: 1;
  width: 120rpx;
  height: 120rpx;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname-section {
  width: 100%;
  margin-bottom: 10rpx;
}

.nickname-input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
}

.username {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.student-number {
  font-size: 28rpx;
  color: #666;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

/* 功能列表样式 */
.function-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

/* 退出登录按钮样式 */
.logout-btn {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  margin-top: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.logout-btn text {
  font-size: 30rpx;
  color: #f56c6c;
  width: 100%;
  display: block;
} 