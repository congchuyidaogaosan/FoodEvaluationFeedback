.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 搜索栏样式 */
.search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
}

/* 公告栏样式 */
.notice-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.notice-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: #1296db;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.notice-list {
  display: flex;
  flex-direction: column;
}

.notice-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 分类栏样式 */
.category-bar {
  background: #fff;
  padding: 20rpx;
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
    box-sizing: border-box;

}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.category-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: #1296db;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-item {
  width: 25%;
  padding: 10rpx;
  box-sizing: border-box;
}

.category-content {
  background: #f5f5f5;
  padding: 20rpx 0;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s;
}

.category-content.active {
  background: #1296db;
  color: #fff;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

.category-content.active .category-name {
  color: #fff;
}

/* 菜品列表样式 */
.dish-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.dish-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.dish-image {
  width: 100%;
  height: 300rpx;
}

.dish-info {
  padding: 20rpx;
}

.dish-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dish-price {
  font-size: 36rpx;
  color: #f56c6c;
  font-weight: bold;
}

.dish-rating {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.rating-stars {
  color: #ffd700;
  margin-right: 10rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多样式 */
.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
} 