.container {
  /* min-height: 100vh; */
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.feedback-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  width: 100%;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-select {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.feedback-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 44rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.feedback-list {
  margin-top: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.feedback-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.feedback-item:last-child {
  border-bottom: none;
}

.feedback-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.feedback-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.feedback-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.feedback-status.pending {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.feedback-status.handled {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.handle-result {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  line-height: 1.5;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.btn-hover {
  opacity: 0.8;
}

.tips {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
} 