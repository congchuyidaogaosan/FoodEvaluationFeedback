.container {
  padding: 0 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
}

/* 菜品头部信息 */
.dish-header {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.dish-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.dish-info {
  position: relative;
  margin-top: -60rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  box-shadow: 0 -5rpx 15rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.dish-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.price-box {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.dish-price {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: bold;
  margin-right: 20rpx;
}

.special-price {
  font-size: 28rpx;
  color: #ff9900;
  font-weight: bold;
}

.dish-rating {
  font-size: 28rpx;
  color: #666;
}

/* 详情区域 */
.detail-section, .evaluation-section {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-content {
  color: #666;
  font-size: 28rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
}

.info-label {
  width: 160rpx;
  color: #999;
}

.info-value {
  flex: 1;
}

/* 评价按钮 */
.action-btn {
  margin: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

/* 评价列表 */
.no-evaluations {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.evaluation-list {
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.evaluation-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.evaluation-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.eval-time {
  font-size: 24rpx;
  color: #999;
}

.scores {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.score-item {
  width: 50%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.score-item text:first-child {
  color: #999;
}

.score-item .score {
  color: #f56c6c;
  font-weight: bold;
}

.comment {
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 