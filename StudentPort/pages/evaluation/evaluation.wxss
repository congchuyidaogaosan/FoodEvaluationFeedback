.container {
  padding: 30rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 菜品信息样式 */
.dish-info {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.dish-image {
  width: 100%;
  height: 400rpx;
}

.dish-detail {
  padding: 20rpx;
}

.dish-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.dish-price {
  font-size: 36rpx;
  color: #f56c6c;
  font-weight: bold;
}

/* 评价表单样式 */
.evaluation-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.score-item {
  margin-bottom: 30rpx;
}

.score-item text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 评论区域样式 */
.comment-area {
  margin-top: 30rpx;
}

.comment-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 提交按钮样式 */
.submit-btn {
  background: #1296db;
  color: #fff;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.btn-hover {
  opacity: 0.8;
} 