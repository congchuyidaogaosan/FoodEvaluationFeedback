<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.restaurant.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="com.restaurant.domain.Student">
            <id property="studentId" column="student_id" jdbcType="INTEGER"/>
            <result property="studentNumber" column="student_number" jdbcType="VARCHAR"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="contactInfo" column="contact_info" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        student_id,student_number,username,
        password,contact_info
    </sql>
</mapper>
